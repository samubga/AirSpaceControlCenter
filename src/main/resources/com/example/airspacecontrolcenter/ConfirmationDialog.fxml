<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.airspacecontrolcenter.controllers.ConfirmationDialogController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label text="¿Estás seguro de que deseas despegar?" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="btnYes" mnemonicParsing="false" onAction="#handleConfirmButton" text="Sí" />
            <Button fx:id="btnNo" mnemonicParsing="false" onAction="#handleCancelButton" text="No" />
        </HBox>
    </VBox>
</AnchorPane>
